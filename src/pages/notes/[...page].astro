---
import { type CollectionEntry, getCollection } from "astro:content";
import BaseLayer from "@layouts/BaseLayer.astro";
import { render } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";

export async function getStaticPaths({ paginate }) {
  const Notes = await getCollection("notes");

  return paginate(Notes, {
    pageSize: 8,
  });
}
const { page } = Astro.props;

console.log(page);
---

<BaseLayer>
  
  <main>
    <article class="general-container">
      <header class="note-header general-grid">
        <h1 class="note-title">
Daily* Notes
        </h1>
        <p class="caveat">* ok, maybe not daily</p>
      </header>
      <div class="stack general-grid note-body">
        <ul>
          {
            page.data.map((post) => (
              <ul>
                <li>
                        <a href=`/notes/${post.id}/`>{post.data.title}<a/>
                  
                </li>
              </ul>
            ))
          }
        </ul>
      </div>
    </article>
  </main>
  <section>
    

  </section>
</BaseLayer>
